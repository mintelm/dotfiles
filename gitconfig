[sendemail]
    smtpEncryption = tls
    smtpServer = smtp.gmail.com
    smtpUser = mariomintel@gmail.com
    smtpServerPort = 587
[core]
    editor = vim
[alias]
    a = add
    ap = add --patch
    c = commit
    cs = commit -S
    ca = commit --amend
    csa = commit --amend -S
    s = status
    p = push
    pf = push -f
    pl = pull
    d = diff
    co = checkout
    cp = cherry-pick
    st = stash
    b = branch
    f = fetch
    fa = fetch --all
    rm = remove
    rb = rebase
    rbi = "!sh -c \"git rebase -i HEAD~$1\" -"
    rbs = "!sh -c \"git rebase --exec 'git commit --amend --no-edit -n -S' -i $1\" -"
    rbc = rebase --continue
    unstage = reset HEAD --
[include]
    path = ~/.gitconfig_local
[includeIf "gitdir:~/diovision/"]
    path = ~/.gitconfig_diovision
[includeIf "gitdir:~/uni/"]
    path = ~/.gitconfig_othr
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[commit]
	verbose = true
[rerere]
	enabled = true
