# remap escape from ctrl-a to ctrl-b
escape ^Bb

startup_message off

vbell off

# statusline
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{= Kc}%?%E*%?  %{KG}%H  %{KW}%D %M %d, %0c '

# start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1
