[user]
    name = Mario Mintel
    email = mariomintel@gmail.com
[alias]
    a = add
    ap = add --patch
    c = commit
    cs = commit -S
    ca = commit --amend
    csa = commit --amend -S
    s = status
    sv = status -v
    p = push
    pf = push -f
    pa = !git remote | xargs -L1 git push --all
    pfa = !git remote | xargs -L1 git push -f --all
    pl = pull
    d = diff
    co = checkout
    cp = cherry-pick
    st = stash
    sw = switch
    b = branch
    f = fetch
    fa = fetch --all
    rm = remove
    rb = rebase
    rbi = "!sh -c \"git rebase -i HEAD~$1\" -"
    rbs = "!sh -c \"git rebase --exec 'git commit --amend --no-edit -n -S' -i $1\" -"
    rbc = rebase --continue
    unstage = reset HEAD --
[include]
    path = ~/.gitconfig_local
[commit]
    verbose = true
[rerere]
    enabled = true
[push]
    autoSetupRemote = true
[pull]
    rebase = true
