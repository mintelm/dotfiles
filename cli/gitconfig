[user]
    name = Mario Mintel
    email = mariomintel@gmail.com
[alias]
    a = add
    ap = add --patch
    c = commit
    cs = commit -S
    ca = commit --amend
    csa = commit --amend -S
    s = status
    p = push
    pf = push -f
    pa = !git remote | xargs -L1 git push --all
    pfa = !git remote | xargs -L1 git push -f --all
    pl = pull
    d = diff
    co = checkout
    cp = cherry-pick
    st = stash
    sw = switch
    b = branch -vv
    bcf = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D $branch; done"
    f = fetch
    fa = fetch --all
    fp = fetch --prune
    rm = remove
    rb = rebase
    rbi = "!sh -c 'git rebase -i HEAD~$1' -"
    rbc = rebase --continue
    unstage = reset HEAD --
    lh = "!sh -c 'git log --oneline --pretty=format:'%H' -n $1' -"
[include]
    path = ~/.gitconfig_local
[commit]
    verbose = true
[rerere]
    enabled = true
[push]
    autoSetupRemote = true
[pull]
    rebase = true
